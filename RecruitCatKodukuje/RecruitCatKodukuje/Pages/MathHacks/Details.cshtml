@page
@model RecruitCatKodukuje.Pages.MathHacks.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details about the Math Hack</h1>

<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MathHack.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MathHack.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MathHack.OptionalStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MathHack.OptionalStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MathHack.MinSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MathHack.MinSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MathHack.MaxSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MathHack.MaxSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MathHack.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MathHack.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MathHack.NumOfEmp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MathHack.NumOfEmp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MathHack.ContactNum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MathHack.ContactNum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MathHack.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MathHack.Industry.Name)
        </dd>
    </dl>
</div>

<div>
    <h2>Candidate Details</h2>
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Candidate Name</th>
                <th>DOB</th>
                <th>Job title</th>
                <th>Salary</th>
            </tr>
        </thead>
    </table>
    <ul>
        @foreach (var Candidate in Model.MathHack.Candidates)
        {
            <li>@Candidate.FirstName - @Candidate.DateOfBirth - @Candidate.JobTitleId - @Candidate.TargetSalary </li>
        }
    </ul>

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.MathHack.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
